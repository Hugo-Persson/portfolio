---
import { Content } from "./AboutMe.md";
import ExperienceCallout from "./ExperienceCallout.astro";
import PrimaryButton from "@components/PrimaryButton.astro";
import SecondaryButton from "@components/SecondaryButton.astro";
import { Languages, proseClasses, Skills } from "@root/constants";

const languages = Object.keys(Languages);
const skills = Object.keys(Skills);
---

<div
  class=`${proseClasses} flex justify-between flex-col w-100 max-w-full min-h-[calc(100vh-theme(spacing.20))] text-text`
  id="aboutMe"
>
  <div class="flex flex-col md:flex-row md:gap-10">
    <div class="w-full md:w-[60%] text-lg" >
      <Content/>
    </div>
    <div class="">
      <h2>Skills</h2>
      <div class="">
        {skills.map((skill) => <ExperienceCallout skill={skill} />)}
      </div>
      <h2>Languages</h2>
      <div>
        {languages.map((skill) => <ExperienceCallout skill={skill} />)}
      </div>
    </div>
  </div>
  <div class="w-full flex justify-center">
    <div
      class="flex flex-col md:flex-row space-y-4 md:space-x-4 md:space-y-0 w-full md:w-3/5 pt-2 mt-8 md:mt-2"
    >
      <a class="w-full" href="/projects">
        <PrimaryButton>Projects</PrimaryButton>
      </a><a class="w-full" href="/experience">
        <SecondaryButton>Experience</SecondaryButton>
      </a>
    </div>
  </div>
</div>
