---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  companyName: string;
  role: string;
  period: string;
  description: string;
  image: ImageMetadata;
}

const { companyName, role, period, description, image } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-6 items-center md:items-start bg-white/5 p-6 rounded-lg hover:bg-white/10 transition-colors">
  <Image
    src={image}
    alt={`${companyName} logo`}
    class="w-24 h-24 object-contain rounded-lg bg-white/90 p-2"
  />
  <div class="flex-1">
    <h3 class="text-xl font-bold mb-1">{companyName}</h3>
    <p class="text-lg font-semibold text-primary mb-1">{role}</p>
    <p class="text-sm mb-3">{period}</p>
    <p class="">{description}</p>
  </div>
</div>
