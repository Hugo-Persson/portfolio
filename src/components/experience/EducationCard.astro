---
import { Image } from 'astro:assets';
interface Props {
  schoolName: string;
  educationName: string;
  period: string;
  description: string;
  image: ImageMetadata;
}

const { schoolName, educationName, period, description, image } = Astro.props;
---

<div
  class="flex flex-col md:flex-row gap-6 items-center md:items-start bg-white/5 p-6 rounded-lg hover:bg-white/10 transition-colors"
>
  <Image
    src={image}
    alt={`${schoolName} logo`}
    class="w-24 h-24 object-contain rounded-lg bg-white/90 p-2"
  />
  <div class="flex-1">
    <h3 class="text-xl font-bold mb-1">{schoolName}</h3>
    <p class="text-lg font-semibold text-primary mb-1">{educationName}</p>
    <p class="text-sm mb-3">{period}</p>
    <p class="">{description}</p>
  </div>
</div>
