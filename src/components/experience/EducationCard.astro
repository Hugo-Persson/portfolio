---
export interface Props {
  university: string;
  educationName?: string; // e.g., "Master of Science in Computer Science"
  period: string;
  description: string;
  href?: string;
}
const { university, educationName, period, description, href } =
  Astro.props as Props;
---

{href ? (
  <a href={href} class="block no-underline">
    <article
      class="mb-6 rounded-2xl border border-sky-100/80 bg-white/60 backdrop-blur p-6 shadow-sm hover:shadow-md transition-shadow cursor-pointer"
    >
      <header class="mb-3">
        <div class="flex justify-between items-center">
          <h3 class="font-semibold text-lg text-slate-800">{university}</h3>
          <span class="text-sm text-slate-500">{period}</span>
        </div>
        {
          educationName && (
            <p class="text-ctp-sky-600 text-sm font-medium mt-1">{educationName}</p>
          )
        }
      </header>
      <p class="text-sm leading-relaxed text-slate-700">{description}</p>
    </article>
  </a>
) : (
  <article
    class="mb-6 rounded-2xl border border-sky-100/80 bg-white/60 backdrop-blur p-6 shadow-sm hover:shadow-md transition-shadow"
  >
    <header class="mb-3">
      <div class="flex justify-between items-center">
        <h3 class="font-semibold text-lg text-slate-800">{university}</h3>
        <span class="text-sm text-slate-500">{period}</span>
      </div>
      {
        educationName && (
          <p class="text-ctp-sky-600 text-sm font-medium mt-1">{educationName}</p>
        )
      }
    </header>
    <p class="text-sm leading-relaxed text-slate-700">{description}</p>
  </article>
)}
